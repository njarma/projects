{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "src",
    "paths": {
      "@environments/*": ["environments/*"],
      "@assets/*": ["assets/*"],
      "@configs/*": ["app/configs/*"],
      "@core/*": ["app/core/*"],
      "@layout/*": ["app/layout/*"],
      "@modules/*": ["app/modules/*"],
      "@shared/*": ["app/shared/*"]
    },
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "module": "es2015",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ],
  "resolveJsonModule": true,
  "esModuleInterop": true
  }
}
